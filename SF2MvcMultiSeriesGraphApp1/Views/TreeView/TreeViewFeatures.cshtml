@{
    ViewBag.Title = "TreeView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Syncfusion.EJ2;
@using Syncfusion.EJ2.Navigations;
<h2>TRAPEZE Navigation Items:</h2>
<br />
<li> Template</li>
<li> SortOrder - None</li>
<li> Theme - Bootstrap-Theme</li>
<br />
<select id="appDomainId">
    <option value="1">Trapeze Workstation</option>
    <option value="2">OPS COM</option>
</select>
<div id="ControlRegion">
    <table>
        <tr>
            <td valign="top">
                @Html.EJS().TreeView("tree1").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[1]).Render()
            </td>
            <td valign="top">
                @Html.EJS().TreeView("tree2").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[2]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree3").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[3]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree4").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[4]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree5").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[5]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree6").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[6]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree7").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[7]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree8").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[8]).Render()
            </td>
            <td valign="top">

                @Html.EJS().TreeView("tree9").ShowCheckBox(false).AllowEditing(true).AllowDragAndDrop(true).AllowMultiSelection(true).NodeTemplate("#treeTemplate").SortOrder(SortOrder.None).Fields(ViewBag.TemplateFields[9]).Render()
            </td>
        </tr>
    </table>
</div>
<script id="treeTemplate" type="text/x-template">
    <div>
        <div class="treeviewdiv">
            <div style="float:left">
                <span class="treeName">${name}</span>
            </div>
            @*${if(count)}
                <div style="margin-right: 5px; float:right">
                    <span class="treeCount e-badge e-badge-primary">${count}</span>
                </div>
                ${/if}*@
        </div>
    </div>
</script>
<style>
    .e-treeview .e-list-text {
        width: 100%;
    }

    .treeCount.e-badge {
        padding: 0.4em;
        vertical-align: text-bottom;
    }

    .material .treeCount.e-badge {
        vertical-align: middle;
    }

    .e-treeview .e-ul {
        padding-left: 0px;
        padding-right: 24px;
    }
</style>
